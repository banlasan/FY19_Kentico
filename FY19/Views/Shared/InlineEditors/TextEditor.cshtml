@using CMS.EventLog
@using Kentico.PageBuilder.Web.Mvc
@using Kentico.Web.Mvc
@model FY19.Models.InlineEditors.TextEditorViewModel

@*@EventLogProvider.LogEvent(EventType.INFORMATION, "Static Text View", "CODE", eventDescription: "is EditMode = " + Context.Kentico().PageBuilder().EditMode)*@

@{ 
    string textVal = string.Empty;

    EventLogProvider.LogEvent(EventType.INFORMATION, "text in inlinecode", "CODE", eventDescription: "text " + Model.Text);

    if (Model.Text != "•")
    { textVal = Model.Text; }
    else
    { textVal = null; }
}

@using (Html.Kentico().BeginInlineEditor("text-editor", Model.PropertyName,
    new
    {
     
        @class = "text-editor " + Model.Class,
        data_enable_formatting = Model.EnableFormatting.ToString()
    }))
{
    @Html.Raw(textVal)
    
}